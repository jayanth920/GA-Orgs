<h1>New tweet</h1>

<% if @tweet.errors.any? %>

	<h2>You've got <%= @tweet.errors.count %> problems!</h2>
	<h2>You've got <%= pluralize(@tweet.errors.count, "problem") %>!</h2>
	<ul>
	<% @tweet.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>



<form action="/tweets" method="post">
	<input name="text" />
	<button>Create Tweet</button>
</form>