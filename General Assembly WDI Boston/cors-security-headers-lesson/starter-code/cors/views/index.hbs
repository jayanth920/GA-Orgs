<style>
    .data {
        background-color: #eee;
        border: 1px solid #888;
        margin-top: 5px;
        padding: 0px 10px;
    }
</style>

<h1>Cross Origin Resource Sharing</h1>

<p>
    To view data, click the button: <input type="button" onclick="fetchData()" value="Fetch Data" />
</p>

<div class="data" style="display: none"></div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function fetchData() {
        $.ajax({
            url: '/fetch',
            type: 'GET',
            contentType: 'application/json',
            success: function(response) {
                $('.data').html($('<pre></pre>').text(JSON.stringify(response, null, 2))).show();
            }
        });
    }
</script>
