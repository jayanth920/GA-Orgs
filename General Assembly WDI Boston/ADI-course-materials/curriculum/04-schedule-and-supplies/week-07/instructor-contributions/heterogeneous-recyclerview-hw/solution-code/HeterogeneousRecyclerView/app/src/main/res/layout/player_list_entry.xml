<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginStart="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    app:cardBackgroundColor="@color/playerListEntryBackground"
    app:cardElevation="@dimen/card_resting_elevation"
    app:contentPadding="@dimen/card_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/player_name"
            style="@android:style/TextAppearance.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/player_name"
            android:layout_marginBottom="@dimen/card_padding"
            android:layout_marginTop="@dimen/card_padding"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/player_position"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/divider_line"
            android:layout_marginEnd="@dimen/card_padding"
            android:layout_marginRight="@dimen/card_padding"/>

        <TextView
            android:id="@+id/player_team"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/divider_line"
            android:layout_toEndOf="@id/player_position"
            android:layout_toRightOf="@id/player_position"
            android:gravity="end"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>