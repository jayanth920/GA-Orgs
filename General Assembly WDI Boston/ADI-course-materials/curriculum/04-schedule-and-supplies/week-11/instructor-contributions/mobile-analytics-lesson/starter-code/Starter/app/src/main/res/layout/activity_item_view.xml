<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context="com.clevertap.adidemo.ItemViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_photo_detail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name_detail"
            android:layout_toRightOf="@+id/product_photo_detail"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_price_detail"
            android:layout_toRightOf="@+id/product_photo_detail"
            android:layout_below="@+id/product_name_detail"
            android:textSize="20sp"
            android:textColor="@color/color_price"
            />

        <Button
            android:id="@+id/addtocart_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:layout_below="@+id/product_photo_detail"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/add_to_cart" />

        <Button
            android:id="@+id/buynow_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:layout_below="@+id/addtocart_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/buy_now" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
