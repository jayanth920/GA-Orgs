<?xml version="1.0" encoding="utf-8"?>

<!--TODO: Move this layout to a new detail fragment xml-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/planet_detail_favorite_button"
        android:src="@drawable/ic_star_border_black_24dp"
        android:tint="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/planet_detail_name"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/planet_detail_favorite_button"
        android:layout_toStartOf="@id/planet_detail_favorite_button"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/planet_detail_diameter"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@id/planet_detail_name"
        android:layout_toLeftOf="@id/planet_detail_favorite_button"
        android:layout_toStartOf="@id/planet_detail_favorite_button"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/planet_detail_temperature"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@id/planet_detail_diameter"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/planet_detail_rings"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@id/planet_detail_temperature"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/planet_detail_moons"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@id/planet_detail_rings"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>