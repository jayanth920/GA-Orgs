<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="md_icon">@drawable/profile</item>-->
        <item name="md_background_color">@color/text_white</item>
        <item name="md_title_color">@color/primary_dark</item>
        <item name="md_content_color">@color/secondary_text</item>
        <item name="md_positive_color">@color/primary_dark</item>
        <item name="md_neutral_color">@color/primary_dark</item>
        <item name="md_negative_color">@color/primary_dark</item>
        <item name="md_widget_color">@color/primary</item>
        <item name="md_item_color">@color/secondary_text</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:divider">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="Base.Theme.ProjectX" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:actionBarTabTextStyle">@style/tab_text_color</item>
    </style>

    <style name="tab_text_color" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="profile_text" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#363636</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="toggle_button">
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:textColor">#363636</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@color/text_white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="detail_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_info">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="no_harassment_message">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="chart_header">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
