<%= form_for([@artist, @song]) do |f| %>
  <p class="alert"><%= @song.errors.full_messages.first if @song.errors.any? %></p>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :album %>
  <%= f.text_field :album %>

  <%= f.label :preview_url %>
  <%= f.text_field :preview_url %>

  <%= f.submit %>

<% end %>
