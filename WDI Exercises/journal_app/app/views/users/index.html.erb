<h2>Users</h2>

<%= link_to 'New User', new_user_path %>
<hr>

<% @users.each do |user| %>
  <p>
    <b><%= "#{user.id}. #{user.username}" %></b><br>
    <%= "#{user.first_name} #{user.last_name}" %><br>
    <% if current_user && current_user.id == user.id # if user is logged in and matches current user item %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Delete', user_path(user), method: :delete %>
    <% end %>
  </p>
<% end %>
